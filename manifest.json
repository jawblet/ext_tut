{
  "name": "Aura",
  "description": "Base Level Extension",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "src/aura.html",
    "default_icon": "assets/aura.png"
  },
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
 ]
}
